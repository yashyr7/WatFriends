<%-include ('./partials/header') %>
<div class="body-login">
  <h1 style="padding-top: 10rem ;">Reset your Password</h1>
  
  <%-include ('./partials/messages') %>
  <form action="/users/resetPassword" method="POST" class="form">
    <div class="form-group">
      <label for="email"></label>
      <input type="email" id="email" name="email" class="form-control" placeholder="Enter Registered Email"
        value="<%= typeof email != 'undefined' ? email : '' %>" />
    </div>
    
    <button type="submit" class="login-button">Send reset link</button>
  </form>
  
  

  <div class="form-text" style="font-size: 1.5rem;">
    Don't Have An Account?
    <a href="/users/register">Register</a>
  </div>
  <div class="form-text" style="font-size: 1.5rem;">
    Have An Account?
    <a href="/users/login">Login</a>
  </div>
  <div class="left-img">
    <img src="../public/images/loginLeft.svg" alt="">
  </div>
  <div class="right-img">
    <img src="../public/images/loginRight.svg" alt="">
  </div>

</div>
